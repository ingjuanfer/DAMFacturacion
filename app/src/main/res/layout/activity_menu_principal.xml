<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondoapp"
        android:contentDescription="Fondo de la aplicación" />

    <!-- Capa de oscurecimiento -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Logo en la parte superior -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="278dp"
        android:layout_height="177dp"
        android:layout_marginTop="104dp"
        android:contentDescription="Logo de la aplicación"
        android:scaleType="fitCenter"
        android:src="@drawable/logoapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cuadro blanco para el contenido -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Título centrado -->
            <TextView
                android:id="@+id/textViewBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Nombre del usuario centrado -->
            <TextView
                android:id="@+id/textViewNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- Tabla de botones -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:gravity="center">

                <TableRow>
                    <Button
                        android:id="@+id/buttonVentas"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#FF9800"
                        android:text="Ventas"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/buttonProductos"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#4CAF50"
                        android:text="Producto"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:onClick="menuProductosonClick" />

                    <Button
                        android:id="@+id/buttonClientes"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#2196F3"
                        android:text="Clientes"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow>
                    <Button
                        android:id="@+id/buttonTecnico"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#9C27B0"
                        android:text="Técnico"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/buttonProyecto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#FFC107"
                        android:text="Proyecto"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/buttonSalir"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#F44336"
                        android:text="Salir"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:onClick="onLogoutClick" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
